<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <EditText
        android:id="@+id/mainET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355"
        tools:layout_editor_absoluteX="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.585"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="AC" />

            <Button
                android:id="@+id/ButtonNegativo"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="+/-" />

            <Button
                android:id="@+id/ButtonPorcentaje"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="%" />

            <Button
                android:id="@+id/ButtonDivision"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ButtonSeven"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="7" />

            <Button
                android:id="@+id/ButtonEight"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="8" />

            <Button
                android:id="@+id/ButtonNine"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="9" />

            <Button
                android:id="@+id/ButtonMultiplicacion"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ButtonFour"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="4" />

            <Button
                android:id="@+id/ButtonFive"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="5" />

            <Button
                android:id="@+id/ButtonSix"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="6" />

            <Button
                android:id="@+id/ButtonResta"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ButtonOne"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="1" />

            <Button
                android:id="@+id/ButtonTwo"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="2" />

            <Button
                android:id="@+id/ButtonThree"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="3" />

            <Button
                android:id="@+id/ButtonSuma"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="B" />

            <Button
                android:id="@+id/ButtonCero"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="0" />

            <Button
                android:id="@+id/ButtonDecimal"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="," />

            <Button
                android:id="@+id/ButtonIgual"
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="25dp"
                android:text="=" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
